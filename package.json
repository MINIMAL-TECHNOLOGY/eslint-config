{
  "name": "@minimaltech/linter",
  "version": "0.0.3",
  "description": "Minimal Technology - Linter configurations",
  "author": "Minimal Technology <developer@minimaltek.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "scripts": {
    "compile": "rm -rf packages/*/dist && pnpm -r run compile",
    "compile:node": "rm -rf packages/node/dist && pnpm --filter ./packages/node run compile",
    "compile:next": "rm -rf packages/next/dist && pnpm --filter ./packages/next run compilep",
    "compile:react": "rm -rf packages/react/dist && pnpm --filter ./packages/react run compile",
    "prerelease:node": "pnpm compile:node",
    "release:node": "pnpm --filter ./packages/node run release",
    "prerelease:next": "pnpm compile:next",
    "release:next": "pnpm --filter ./packages/next run release",
    "prerelease:react": "pnpm react",
    "release:react": "pnpm --filter ./packages/react run release"
  }
}
